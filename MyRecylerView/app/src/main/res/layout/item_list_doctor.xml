<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_doctor"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:contentDescription="@string/image_doctor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_doctor"
            app:layout_constraintTop_toTopOf="@+id/img_doctor">

            <TextView
                android:id="@+id/tv_name_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_doctor" />

            <TextView
                android:id="@+id/tv_specialist_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/specialist_doctor" />

            <TextView
                android:id="@+id/tv_experience_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/experience_doctor"
                app:drawableStartCompat="@drawable/ic_baseline_business_center" />

            <TextView
                android:id="@+id/tv_price_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_doctor" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>